{
	"label": "User",
	"description": "Manage all users on this website",
	"actions": {
		"index": {"step": "view-html"},
		"list": {"step": "view-html"},
		"view": {"step": "view-html"},
		
		"new": {
			"steps": [{
				"step": "as-modal",
				"steps": [
				{
					"step": "add",
					"type": "user",
					"form": {
						"kind": "layout-vertical",
						"label": "Add a Person",
						"children": [
							{"kind": "text", "label": "Full Name", "path": "displayName"},
							{"kind": "text", "label": "Email Address", "path": "username"}
						]
					}
				}]
			}]
		},

		"edit": {
			"steps": [{
				"step": "as-modal",
				"steps": [{
					"step": "form-html",
					"form": {
						"kind": "layout-vertical",
						"label": "Edit User",
						"description": "",
						"children": [
							{"kind": "text", "label": "Full Name", "path": "displayName"},
							{"kind": "text", "label": "Email Address", "path": "username"}
						]
					}},
					{"step": "save","comment": "Updated by {{.Author}}"}
				]
			}]
		},

		"delete": {
			"steps":[
				{"step": "delete", "type": "user"},
				{"step": "refresh-page"}
			]
		}
	}
}
