{
	"label": "Photo Album",
	"description": "For regular use. Contains text, images, and more.",
	"icon": "fa-regular fa-images",
	"containedBy": ["top", "folder"],
	"childSortType": "journal.createDate",
	"childSortOrder": "DESC",
	"schema": {
		"type": "object",
		"properties": {
			"label": {
				"type": "string",
				"description": "The human-readable heading for this photo album"
			},
			"description": {
				"type": "string",
				"description": "Text description at top of page"
			}
		},
		"required": []
	},
	"states": {
		"default": {
			"label": "Default State",
			"description": "Photo Albums only have one state"
		}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
			}, 
		"editor": {
			"label": "Editor",
			"description": "Can make changes to this article."
		},
		"readonly": {
			"label": "Read Only Access",
			"description": "Can read this article, but cannot make changes"
		}
	},
	"actions": {
		"init": {
			"steps": [
				{"step": "set-defaults", "label": "New Photo Album", "description": "Enter a brief description here. ðŸŒˆ"},
				{"step": "forward-to", "url": "/{{.Token}}/edit"}
			]
		},
		"view": {
			"step": "view-html"
		},
		"children": {
			"step": "view-html"
		},
		"edit": {
			"roles": ["owner", "editor", "author"],
			"step": "view-html"
		},
		"properties": {
			"roles": ["owner", "editor", "author"],
			"steps": [{
				"step": "form-html",
				"form": {
					"kind": "layout-vertical",
					"label": "Edit Photo Album",
					"description": "",
					"children": [{
						"kind": "text",
						"label": "Label",
						"path": "label"
					},{
						"kind": "textarea",
						"label": "Description",
						"path": "description"
					}]
				}
			}, {
				"step": "set-data",
				"paths": ["label", "description"]
			},{
				"step": "save",
				"comment": "Updated by {{.Author}}"
			}, {
				"step": "trigger-event",
				"event": "closeModal"
			}]
		},
		"attachments": {
			"roles": ["owner", "editor", "author"],
			"steps": [{
				"step": "new-child",
				"template": "photograph",
				"withChild": [
					{"step": "upload-attachments"},
					{"step": "set-thumbnail"},
					{"step": "save"}
				]}
			]
		},
		"delete": {
			"roles": ["owner"],
			"steps": [
				{"step": "delete"},
				{"step": "with-parent", "steps": [
					{"step": "forward-to", "url": "/{{.Token}}"}
				]}
			]
		}
	}
}
