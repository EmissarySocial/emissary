{
	"label": "Folder",
	"description": "Folders can contain all other streams",
	"containedBy": ["top", "folder"],
	"schema": {
		"url": "example.com/test-template",
		"title": "Test Template Schema",
		"type": "object",
		"properties": {}
	},
	"states": {
		"default": {
			"label": "Default",
			"description": "Folders only have one state"
		}
	},
	"roles": {
		"editor": {
			"label": "Editor",
			"description": "Editors can manage all content in this folder"
		},
		"viewer": {
			"label": "Viewer",
			"description": "Viewers can access folder contents, but can not add new items"
		}
	},
	"actions": {
		"view": {
			"step": "stream-HTML"
		},
		"edit": {
			"steps":[{
				"method": "form",
				"label": "Edit Folder",
				"form": {
					"kind": "layout-vertical",
					"label": "Update Form",
					"children": [{
						"kind": "text",
						"label": "Label",
						"path": "label"
					},
					{
						"kind": "textarea",
						"label": "Description",
						"path": "description"
					}]
				}
			}, {
				"method": "stream-data",
				"fields": ["label", "description"]
			}, {
				"method": "stream-save",
				"comment": "Updated Folder"
			}]
		},
		"delete": {
			"step": "stream-delete"
		},
		"add-child": {
			"step": "stream-create"
		},
		"add-top": {
			"roles": ["owner"],
			"method": "top-folder-create"
		}
	}
}