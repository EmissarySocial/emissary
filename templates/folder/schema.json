{
	"label": "Folder",
	"description": "Folders can contain all other streams",
	"containedBy": ["top", "folder"],
	"schema": {
		"url": "example.com/test-template",
		"title": "Test Template Schema",
		"type": "object",
		"properties": {}
	},
	"states": {
		"default": {
			"label": "Default",
			"description": "Folders only have one state"
		}
	},
	"roles": {
		"editor": {
			"label": "Editor",
			"description": "Editors can manage all content in this folder"
		},
		"viewer": {
			"label": "Viewer",
			"description": "Viewers can access folder contents, but can not add new items"
		}
	},
	"actions": {
		"view": {
			"method": "view-stream"
		},
		"edit": {
			"label": "Edit folder",
			"method": "update-data",
			"form": {
				"kind": "layout-vertical",
				"label": "Update Form",
				"description": "This will update the object in this state",
				"children": [{
					"kind": "text",
					"label": "Label",
					"path": "label"
				},
				{
					"kind": "textarea",
					"label": "Description",
					"path": "description"
				}]
			}
		},
		"delete": {},
		"add-child": {},
		"add-top": {},
		"create-top-folder": {
			"_roles": ["owner"],
			"method": "create-top-stream"
		}
	}
}