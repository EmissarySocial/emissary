{
	"states": [{
		"stateId": "new",
		"transitions": [{
			"transitionId": "create",
			"label": "Create a New Article",
			"nextState": "default",
			"nextView": "default",
			"roles": ["AUTHOR", "EDITOR"],
			"form": {
				"kind": "layout-vertical",
				"children": [{
					"kind": "text",
					"label": "Name",
					"path": "label"
				}]
			}
		}]
	}, {
		"stateId":"default",
		"label": "Default",
		"views": [{
			"viewId": "default",
			"roles": []
		},{
			"viewId": "list-item",
			"roles": []
		}],
		"transitions": [{
			"transitionId": "update",
			"label": "Update Article",
			"nextState": "default",
			"nextView": "detail",
			"roles": ["AUTHOR", "EDITOR"],
			"form": {
				"kind": "layout-vertical",
				"label": "Update Form",
				"description": "This will update the object in this state",
				"children": [{
					"kind": "text",
					"label": "Label",
					"path": "label"
				},{
					"kind": "textarea",
					"label": "Description",
					"path": "description"
				},{
					"kind": "select",
					"label": "Choose Something",
					"path": "choose"
				}]
			}
		}, {
			"transitionId": "share",
			"label": "Sharing Options",
			"nextState": "default",
			"nextView": "detail",
			"roles": ["AUTHOR", "EDITOR"],
			"form": {
				"kind": "layout-vertical",
				"label": "Who Do You Want to Share this Content With?",
				"description": "",
				"options": {
					"show-labels": "false"
				},
				"children": [{
					"kind": "option",
					"label": "Do Not Share This Content",
					"path": "share",
					"value": "NONE"
				},{
					"kind": "option",
					"label": "Share with Everybody",
					"path": "share",
					"value": "ALL"
				},{
					"kind": "option",
					"label": "Share with Selected People",
					"path": "share",
					"value": "SOME"
				},{
					"kind": "layout-vertical",
					"class": "max-rows",
					"options": {
						"show-labels": "false"
					},
					"children": [{
						"kind": "select",
						"widget": "checkbox",
						"path": "shareWith",
						"options": {
							"provider":"users"
						}
					}]
				}]
			}
		}]
	}]
}