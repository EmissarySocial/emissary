{
	"label": "Article",
	"description": "For regular use. Contains text, images, and more.",
	"containedBy": ["folder", "article"],
	"schema": {
		"type": "object",
		"properties": {
			"label": {
				"type": "string",
				"description": "The human-readable title for this article"
			},
			"description": {
				"type": "string",
				"description": "The HTML content for this article"
			},
			"choose": {
				"type": "string",
				"enum": ["Hello", "Darkness", "My", "Old", "Friend"]
			},
			"share": {
				"type": "string",
				"enum": ["ALL", "SOME", "NONE"]
			},
			"shareWith": {
				"type": "array",
				"items": {
					"type": "string"
				}
			}
		},
		"required": ["class", "title", "body"]
	},
	"states": {
		"default": {
			"label": "Default State",
			"description": "All articles only have one state"
		}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
			}, 
		"editor": {
			"label": "Editor",
			"description": "Can make changes to this article."
		},
		"readonly": {
			"label": "Read Only Access",
			"description": "Can read this article, but cannot make changes"
		}
	},
	"actions": {
		"view": {
			"roles": [],
			"states": [],
			"step": "view-stream"
		},
		"draft": {
			"roles": ["owner", "editor"],
			"states": [],
			"step": "draft-edit"
		},
		"publish": {
			"roles": ["owner", "editor"],
			"states": [],
			"step": "draft-publish"
		},
		"properties": {
			"roles": ["owner", "editor"],
			"states": [],
			"steps": [{
				"method": "data",
				"form": {
					"kind": "layout-vertical",
					"label": "Update Form",
					"description": "This will update the object in this state",
					"children": [{
						"kind": "text",
						"label": "Label",
						"path": "label"
					},{
						"kind": "textarea",
						"label": "Description",
						"path": "description"
					}]
				}
			}]
		},
		"add-child": {
			"roles": ["owner", "editor"],
			"states": [],
			"step": "add-child"
		},
		"share": {
			"roles": ["owner", "editor"],
			"states": [],
			"step": "update-sharing"
		},
		"create-top-folder": {
			"roles": ["owner"],
			"states": [],
			"step": "create-top-stream"
		}
	}
}
