{
	"label": "Article",
	"description": "For regular use. Contains text, images, and more.",
	"icon": "fa-regular fa-file-lines",
	"containedBy": ["folder", "article"],
	"schema": {
		"type": "object",
		"properties": {
			"label": {
				"type": "string",
				"description": "The human-readable title for this article"
			},
			"description": {
				"type": "string",
				"description": "The HTML content for this article"
			}
		}
	},
	"states": {
		"default": {
			"label": "Default State",
			"description": "All articles only have one state"
		}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
			}, 
		"editor": {
			"label": "Editor",
			"description": "Can make changes to this article."
		},
		"readonly": {
			"label": "Read Only Access",
			"description": "Can read this article, but cannot make changes"
		}
	},
	"actions": {
		"init": {
			"steps": [
				{"step": "set-data", "values": {"label": "New Article"}}
			]
		},
		"view": {
			"roles": ["viewer", "editor", "owner"],
			"step": "view-html"
		},
		"heading": {
			"roles": ["viewer", "editor", "owner"],
			"step": "view-html"
		},
		"edit": {
			"roles": ["owner", "editor"],
			"step": "edit-draft"
		},
		"publish-draft": {
			"roles": ["owner", "editor"],
			"step": "publish-draft"
		},
		"properties": {
			"roles": ["editor", "owner"],
			"steps": [
				{"step": "as-modal", "steps": [
					{"step": "form-html",
					"form": {
						"kind": "layout-vertical",
						"label": "Article Properties",
						"description": "This will update the object in this state",
						"children": [{
							"kind": "text",
							"label": "Label",
							"path": "label"
						},{
							"kind": "textarea",
							"label": "Description",
							"path": "description"
						}]
					}
				},
				{"step": "save", "comment": "Updated by {{.Author}}"}
			]}]
		},
		"sharing": {
			"roles": ["owner"],
			"steps": [
				{"step":"as-modal", "steps": [
					{"step": "set-simple-sharing", "roles": ["readonly"], "title":"Who Can See This Article?", "message": "Select who can view and comment on this article."},
					{"step":"save", "message": "Sharing updated by {{.Author}}"}
				]}
			]
		},
		"delete": {
			"roles": ["owner"],
			"steps": [
				{"step":"delete", "title": "Delete this Article?", "message": "All content and comments will be lost.  There is NO UNDO."},
				{"step": "forward-to", "url":"/{{.ParentID}}"}
			]
		},
		"delete-draft": {
			"roles": ["owner", "editor"],
			"steps": [
				{"step": "delete-draft"},
				{"step": "forward-to", "url": "/{{.Token}}"}
			]
		},
		"edit-alt": {
			"roles": ["owner", "editor"],
			"steps": [
				{"step":"with-draft", "steps": [
					
				]}
			]
		}
	}
}
