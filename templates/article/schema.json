{
	"label": "Article",
	"description": "For regular use. Contains text, images, and more.",
	"icon": "fa-regular fa-file-lines",
	"containedBy": ["folder", "article"],
	"schema": {
		"type": "object",
		"properties": {
			"label": {
				"type": "string",
				"description": "The human-readable title for this article"
			},
			"description": {
				"type": "string",
				"description": "The HTML content for this article"
			}
		}
	},
	"states": {
		"unpublished": {
			"label": "Default State",
			"description": "Visible only to Authors and Owners"
		},
		"published": {
			"label": "Published",
			"description": "Visible to all people with permissions"
		}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
			}, 
		"editor": {
			"label": "Editor",
			"description": "Can make changes to this article."
		},
		"viewer": {
			"label": "Viewer",
			"description": "Can read and comment on this article"
		}
	},
	"actions": {
		"init": {
			"steps": [
				{"step": "set-data", "values": {"label": "New Article"}},
				{"step": "set-state", "state": "unpublished"}
			]
		},
		"view": {
			"roles": ["viewer", "editor", "owner"],
			"step": "view-html"
		},
		"heading": {
			"roles": ["viewer", "editor", "owner"],
			"step": "view-html"
		},
		"delete": {
			"roles": ["owner"],
			"steps": [
				{"step":"delete", "title": "Delete this Article?", "message": "All content and comments will be lost.  There is NO UNDO."},
				{"step": "forward-to", "url":"/{{.ParentID}}"}
			]
		},
		"edit": {
			"roles": ["owner", "editor"],
			"steps": [
				{"step": "with-draft", "steps": [
					{"step": "edit-content", "file":"edit"},
					{"step": "save"}
				]}
			]
		},
		"sharing": {
			"roles": ["owner"],
			"steps": [
				{"step":"as-modal", "steps": [
					{"step": "set-simple-sharing", "roles": ["readonly"], "title":"Who Can See This Article?", "message": "Select who can view and comment on this article."},
					{"step":"save", "message": "Sharing updated by {{.Author}}"}
				]}
			]
		},
		"promote-draft": {
			"roles": ["owner", "editor"],
			"steps": [
				{"step":"publish-draft"},
				{"step": "forward-to", "url": "/{{.Token}}"}
			]
		},
		"publish": {
			"states": ["unpublished"],
			"roles": ["owner", "editor"],
			"steps": [
				{"step": "set-state", "state": "published"}
			]
		},
		"unpublish": {
			"states": ["published"],
			"roles": ["owner", "editor"],
			"steps": [
				{"step": "set-state", "state": "unpublished"}
			]
		},
		"properties": {
			"roles": ["editor", "owner"],
			"steps": [
				{"step": "with-draft", "steps":[
					{"step": "as-modal", "steps": [
						{"step": "form-html",
							"form": {
								"kind": "layout-vertical",
								"label": "Article Properties",
								"description": "This will update the object in this state",
								"children": [{
									"kind": "text",
									"label": "Label",
									"path": "label"
								},{
									"kind": "textarea",
									"label": "Description",
									"path": "description"
								}]
							}
						}]
					},
					{"step": "save", "comment": "Properties updated by {{.Author}}"}
				]
			}]
		},
		"discard-draft": {
			"roles": ["owner", "editor"],
			"steps": [
				{"step": "with-draft", "steps":[
					{"step": "delete", "title":"Discard This Draft?", "message":"The original article will remain unchanged."}
				]},
				{"step": "forward-to", "url": "/{{.Token}}"}
			]
		}
	}
}
