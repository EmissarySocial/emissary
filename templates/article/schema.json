{
	"label": "Article",
	"description": "For regular use. Contains text, images, and more.",
	"containedBy": ["folder", "article"],
	"schema": {
		"url": "example.com/test-template",
		"title": "Test Template Schema",
		"type": "object",
		"properties": {
			"class": {
				"type": "string"
			},
			"title": {
				"type": "string",
				"description": "The human-readable title for this article"
			},
			"body": {
				"type": "string",
				"description": "The HTML content for this article"
			},
			"persons": {
				"description": "Array of people to render on the page",
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"email": {
							"type":"string"
						}
					}
				}
			}
		},
		"required": ["class", "title", "body", "persons"]
	},
	"states": {
		"new": {
			"transitions": {
				"create": {
					"label": "Create a New Article",
					"nextState": "default",
					"nextView": "default",
					"form": "create"
				}
			}
		},
		"default": {
			"label": "Default",
			"views": ["default", "detail", "admin"],
			"transitions":  {
				"update": {
					"label": "Update Article",
					"nextState": "default",
					"nextView": "detail",
					"form": "default"
				}
			}
		}
	},
	"views": [{
		"name": "default",
		"label":"Info",
		"permisions": ["all"]
	},
	{
		"name": "detail",
		"label":"Details",
		"permisions": ["all"]
	}],
	"forms": {
		"create": {
			"kind": "layout-vertical",
			"children": [{
				"kind": "text",
				"label": "Label",
				"path": "label"
			}]
		},
		"default": {
			"kind": "layout-vertical",
			"label": "Update Form",
			"description": "This will update the object in this state",
			"children": [{
				"kind": "text",
				"label": "Label",
				"path": "label"
			}, {
				"kind": "textarea",
				"label":"Description",
				"path": "description"
			},{
				"kind": "text",
				"label": "Custom Data: Title",
				"path": "data.title"
			}, {
				"kind": "textarea",
				"label":"Custom Data: Body",
				"path": "data.description"
			}]
		}
	}
}