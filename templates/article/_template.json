{
	"label": "Article Template",
	"schema": {
		"url": "example.com/test-template",
		"title": "Test Template Schema",
		"type": "object",
		"properties": {
			"class": {
				"type": "string"
			},
			"title": {
				"type": "string",
				"description": "The human-readable title for this article"
			},
			"body": {
				"type": "string",
				"description": "The HTML content for this article"
			},
			"persons": {
				"description": "Array of people to render on the page",
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"email": {
							"type":"string"
						}
					}
				}
			},
			"friends": {
			"type" : "array",
			"items" : { "title" : "REFERENCE", "$ref" : "#" }
			}
		},
		"required": ["class", "title", "body", "persons"]
	},
	"states": {
		"default": {
			"label": "Default",
			"views": ["default", "detail"],
			"transitions": [{
				"id":"update",
				"label": "Update",
				"stateId": "default",
				"nextView": "detail",
				"form": {
					"kind": "layout-vertical",
					"label": "Update Form",
					"description": "This will update the object in this state",
					"children": [{
						"kind": "text",
						"label": "Old Stream Label",
						"path": "label"
					}, {
						"kind": "textarea",
						"label":"Stream Body",
						"path": "description"
					},{
						"kind": "text",
						"label": "Data Title",
						"path": "data.title"
					}, {
						"kind": "textarea",
						"label":"Data Description",
						"path": "data.description"
					}]
				}
			}]
		}
	},
	"views": {
		"default": {
			"label": "Default",
			"file":  "default.html"
		},
		"detail": {
			"label": "Detail",
			"file":  "detail.html"
		}
	}
}

