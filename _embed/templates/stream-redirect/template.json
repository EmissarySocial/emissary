{
	"templateId": "redirect",
	"model":"stream",
	"containedBy": ["top", "folder"],
	"label": "Redirect",
	"description": "Forward your visitors to an external website",
	"icon": "forward",
	"childSortType": "label",
	"childSortOrder": "ASC",
	"schema": {
		"type": "object",
		"properties": {
			"label": {"type":"string"},
			"summary": {"type":"string"},
			"data": {"type": "object", "properties": {
				"url": {"type": "string", "format":"url"}
			}}
		}
	},
	"states": {},
	"roles": {
		"owner": {},
		"viewer":{}
	},
	"actions": {
		"create": {
			"roles":["owner"],
			"steps":[
				{"step":"save"},
				{"step":"forward-to", "url":"/{{.StreamID}}"}
			]
		},
		"view": {"step": "view-html", "roles":["viewer"]},
		"edit": {
			"roles": ["owner"],
			"steps":[{
				"step": "as-modal",
				"background":"view",
				"steps": [
					{
						"step": "edit",
						"label": "Edit Redirect",
						"form": {
							"type": "layout-vertical",
							"children": [
								{"type": "text", "label": "Label", "path": "label"},
								{"type": "textarea", "label": "Summary", "path": "summary"},
								{"type": "text", "label": "URL", "path": "data.url"}
							]
						}
					}, 
					{"step": "save", "comment": "Updated Redirect"}
				]
			}]
		},
		"delete": {
			"roles": ["owner"],
			"steps": [
				{"step":"delete", "title":"Delete this Item?", "message":"This will permanently delete this item from your website."},
				{"step":"forward-to", "url":"{{.ParentID}}/"}
			]
		},
		
		"sharing": {
			"roles": ["owner"],
			"steps": [
				{"step":"as-modal", "steps": [
					{"step": "set-simple-sharing", "roles": ["viewer"], "title":"Who Can See This Folder?", "message": "Select who can view this folder."},
					{"step":"save", "message": "Sharing updated by {{.Author}}"}
				]}
			]
		}
	}
}