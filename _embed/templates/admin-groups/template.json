{
	"templateId":"admin-groups",
	"templateRole":"admin",
	"model":"group",
	"containedBy":["admin"],
	"label": "Group",
	"description": "Domain Owners only.  Site Admin",
	"actions": {
		"index": {"do": "view-html"},
		"list": {"do": "view-html"},
		
		"add": {
			"steps": [{
				"do": "as-modal",
				"steps": [
				{
					"do": "add",
					"type": "group",
					"form": {
						"type": "layout-vertical",
						"label": "Add a Group",
						"children": [
							{"type": "text", "label": "Label", "path": "label"}
						]
					}
				}]
			}]
		},

		"edit": {
			"steps": [{
				"do": "as-modal",
				"steps": [
					{
						"do": "edit",
						"form": {
							"type": "layout-vertical",
							"label": "Edit Group",
							"description": "",
							"children": [
								{"type": "text", "label": "Label", "path": "label"}
							]
						},
						"options": ["delete:/admin/groups/{{.GroupID}}/delete"]
					},
					{"do": "save","comment": "Updated by {{.Author}}"}
				]
			}]
		},

		"delete": {
			"steps":[
				{"do": "delete", "type": "group", "message": "People will be removed from this group, but will not be deleted."},
				{"do": "refresh-page"}
			]
		}
	}
}
