	"templateId":"base-social",
	"bundles":{
		"stylesheet":{
			"content-type":"text/css"
		}
	},
	"actions":{

		"follow-button": {
			"roles":["authenticatd"],
			"step":"view-html"
		},

		"like-button": {
			"roles":["authenticatd"],
			"steps":[
				{"step":"set-response"},
