{
	"templateId":"base-social",
	"bundles":{
		"stylesheet":{
			"content-type":"text/css"
		}
	},
	"actions":{

		"follow-button": {
			"roles":["authenticated"],
			"steps": [
				{"step":"view-html"},
				{"step":"set-header", "name":"hx-push-url", "value":"false"},
				{"step":"set-header", "name":"hx-reswap", "value":"outerHTML"}
			]
		},

		"like-button": {
			"roles":["authenticated"],
			"steps":[
				{"step":"set-response"},
				{"step":"view-html", "method":"both"}
			]
		},

		"response-button":{"step":"view-html", "file":"response-buton"},
		"response-icons":{
			"steps":[
				{"step":"as-tooltip", "steps":[
					{"step":"view-html"}
				]}
			]
		},
		
		"xparent":{"step":"view-html"},
		"xreplies-before":{"step":"view-html"},
		"xreplies-after":{"step":"view-html"}
	}
}