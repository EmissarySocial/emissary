{
	"templateId":"base-rule-editor",
	"model":"Profile",
	"label":"Profile Block Editor (BASE TEMPLATE)",
	"actions": {

		"rules-list": {"roles":["self"], "step":"view-html"},

		"rule-actor": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"as-modal", "steps":[
						{"step":"set-data", "from-url":["target"]},
						{"step":"edit", "form":{
							"type":"layout-vertical", 
							"label":"Block a Person",
							"children":[
								{"type":"hidden", "path":"type", "options":{"value":"ACTOR"}},
								{"type":"text", "path":"trigger", "label":"Enter the Person's Fediverse Address", "description":"Something like @ruleed-user@domain.com or https://domain.com/@ruleed-user"},
								{"type":"textarea", "path":"comment", "label":"Notes", "description":"OPTIONAL. Explains WHY your are blocking this person"},
								{"type":"toggle", "path":"isActive", "label":"Active?", "options":{"true-text":"YES: Block this Person", "false-text":"NO: Do not enforce this rule."}},
								{"type":"toggle", "path":"isPublic", "label":"Publish?", "options":{"true-text":"YES: Followers' accounts may use this rule automatically", "false-text":"NO: This rule is only visible to me.", "show-if":"isActive is true"}}
							]
						}}
					]}
				]}
			]
		},

		"rule-domain": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"as-modal", "steps":[
						{"step":"set-data", "from-url":["target"]},
						{"step":"edit", "form":{
							"type":"layout-vertical", 
							"label":"Block a Domain",
							"children":[
								{"type":"hidden", "path":"type", "options":{"value":"DOMAIN"}},
								{"type":"text", "path":"trigger", "label":"Enter the Domain to Block", "description":"Something like ruleed-domain.com"},
								{"type":"textarea", "path":"comment", "label":"Notes", "description":"OPTIONAL. Explains WHY your are blocking this domain"},
								{"type":"toggle", "path":"isActive", "label":"Active?", "options":{"true-text":"YES: Block this Domain", "false-text":"NO: Do not enforce this rule."}},
								{"type":"toggle", "path":"isPublic", "label":"Publish?", "options":{"true-text":"YES: Followers' accounts may use this rule automatically", "false-text":"NO: This rule is only visible to me.", "show-if":"isActive is true"}}
							]
						}}
					]}
				]}
			]
		},

		"rule-keywords": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"as-modal", "steps":[
						{"step":"set-data", "from-url":["target"]},
						{"step":"edit", "form":{
							"type":"layout-vertical", 
							"label":"Block Tags & Keywords",
							"children":[
								{"type":"hidden", "path":"type", "options":{"value":"CONTENT"}},
								{"type":"text", "path":"trigger", "label":"Enter the Tags and Keywords to Block", "description":"Enter one or more words, separated by spaces."},
								{"type":"textarea", "path":"comment", "label":"Notes", "description":"OPTIONAL. Explains WHY your are blocking these tag or keyword"},
								{"type":"toggle", "path":"isActive", "label":"Active?", "options":{"true-text":"YES: Block this Keyword", "false-text":"NO: Do not enforce this rule."}},
								{"type":"toggle", "path":"isPublic", "label":"Publish?", "options":{"true-text":"YES: Followers' accounts may use this rule automatically", "false-text":"NO: This rule is only visible to me.", "show-if":"isActive is true"}}
							]
						}}
					]}
				]}
			]
		},

		"rule-service": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"as-modal", "steps":[
						{"step":"edit", "form":{
							"type":"layout-vertical", 
							"label":"Use a Block Service",
							"children":[
								{"type":"hidden", "path":"type", "options":{"value":"EXTERNAL"}},
								{"type":"text", "path":"trigger", "label":"Service Address", "description":"Enter your unique address provided by the rule service."}
							]
						}}
					]}
				]}
			]
		},

		"rule-edit": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"as-modal", "steps":[
						{"step":"edit", "form":{
							"type":"layout-vertical", 
							"label":"Block Settings",
							"children":[
								{"type":"text", "path":"trigger", "label":"Blocking", "readOnly":true, "options":{"class":"bold"}},
								{"type":"textarea", "path":"comment", "label":"Notes", "description":"OPTIONAL. Explains WHY your are ruleing this person"},
								{"type":"toggle", "path":"isActive", "label":"Active?", "options":{"true-text":"YES: Enforce this Block", "false-text":"NO: Do not enforce this rule."}},
								{"type":"toggle", "path":"isPublic", "label":"Publish?", "options":{"true-text":"YES: Followers' accounts may use this rule automatically", "false-text":"NO: This rule is only visible to me.", "show-if":"isActive is true"}}
							]
						}, "options":["delete:/@me/rule-delete?ruleId={{.ObjectID}}"]}
					]}
				]}
			]
		},

		"rule-delete": {
			"roles":["self"],
			"steps":[
				{"step":"with-rule", "steps":[
					{"step":"delete", "title":"Stop Blocking {{.Label}}?", "message":"Removing this rule will allow blocked messages from this source to be displayed."}
				]}
			]
		}
	}
}	
