{
	"templateId":"admin-users",
	"templateRole":"admin",
	"model":"user",
	"containedBy":["admin"],
	"label": "User",
	"description": "Manage all users on this website",
	"actions": {
		"index": {"step": "view-html"},
		"list": {"step": "view-html"},
		
		"add": {
			"steps": [{
				"step": "as-modal",
				"steps": [
					{
						"step": "add",
						"type": "user",
						"form": {
							"type": "layout-vertical",
							"label": "Add a Person",
							"children": [
								{"type": "text", "label": "Full Name", "path": "displayName"},
								{"type": "text", "label": "Email Address", "path": "emailAddress"},
								{"type": "text", "label": "Username", "path": "username"},
								{"type": "toggle", "label": "Public?", "path": "isPublic"},
								{"type": "multiselect", "label": "Group(s)", "path": "groupIds", "options":{"provider":"groups", "sort":false}}
							]
						}
					},
					{"step": "refresh-page"}
				]
			}]
		},

		"edit":{
			"steps":[
				{
					"step":"as-modal",
					"steps":[
						{"step":"view-html"},
						{"step": "refresh-page"}
					]
				}				
			]
		},

		"edit-form": {
			"steps": [{
				"step": "edit",
				"type": "user",
				"form": {
					"type": "layout-vertical",
					"description": "",
					"children": [
						{"type": "text", "label": "Full Name", "path": "displayName"},
						{"type": "text", "label": "Email Address", "path": "emailAddress"},
						{"type": "text", "label": "Username", "path": "username"},
						{"type": "toggle", "label": "Public?", "path": "isPublic"},
						{"type": "multiselect", "label": "Group(s)", "path": "groupIds", "options":{"provider": "groups", "sort":false}}
					]
				},
				"options": [
					"endpoint:/admin/users/{{.UserID}}/edit-form",
					"delete:/admin/users/{{.UserID}}/delete"
				]
			}]
		},

		"send-welcome": {
			"steps":[
				{"step":"send-email", "email":"welcome"}
			]
		},

		"delete": {
			"steps":[
				{"step": "delete", "type": "user"},
				{"step": "refresh-page"}
			]
		}
	}
}
