					"label":"Server-Wide Block",
					"children":[
						{"type":"select", "path":"type", "label":"Type", "options":{"provider":"rule-types"}},
						{"type":"text", "path":"trigger", "label":"Trigger Text"}
					]
				}, "options":["delete:/admin/rules/{{.RuleID}}/delete"]}
