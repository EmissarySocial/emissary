{
	"templateId": "social-inbox-item",
	"label": "Inbox Item",
	"description": "Message in a social inbox, possibly a link to an external URL",
	"containedBy": [
		"social-inbox"
	],
	"schema": {
		"type": "object",
		"properties": {}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
		}
	},
	"states": {
		"unread": {
			"label": "Unread"
		}, 
		"read": {
			"label": "Read"
		}
	},
	"actions": {
		"view": {
			"step": "view-html"
		},
		"mark-read": {
			"states": ["unread"],
			"steps": [{
				"step": "set-state",
				"newState": "read"
			}, {
				"step": "save",
				"comment": "State changed to 'read'"
			}]
		},
		"mark-unread": {
			"step": "update-state",
			"steps": [{
				"step": "set-state",
				"newState": "unread"
			}, {
				"step": "save",
				"comment": "State changed to 'unread'"
			}]
		}
	}
}