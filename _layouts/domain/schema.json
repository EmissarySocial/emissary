{
	"label": "Domain",
	"description": "Domain Owners only.  Site Admin",
	"actions": {
		"index": {"step": "view-html"},
		"signup": {
			"steps": [{
				"step": "as-modal", 
				"steps": [
					{
						"step": "form-html",
						"form": {
							"kind": "layout-vertical",
							"label": "Custom Signup Form",
							"children": [
								{"kind": "text", "path":"signupForm.title", "label": "Title", "description": "Large text is displayed at the top of the signup page."},
								{"kind": "textarea", "path":"signupForm.message", "label":"Message", "description": "A block of regular text displayed below the title.", "cssClass":"height100"},
								{"kind": "toggle", "path": "signupForm.active", "options":{"true-text":"Activate Form", "false-text": "Activate Form"}}
							]
						}
					}, 
					{"step": "save"}
				]
			}]
		}
	}
}
