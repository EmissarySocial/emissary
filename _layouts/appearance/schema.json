{
	"schema": {
		"type":"object",
		"properties": {
			"label": {"type":"string", "maxlength":100},
			"bannerUrl": {"type":"string", "maxlength":1000},
			"headerHtml": {"type":"string", "maxlength":10000},
			"footerHtml": {"type":"string", "maxlength":10000},
			"customCss": {"type":"string", "maxlength":10000}
		}
	},
	"actions": {
		"index": {"steps": [
			{"step": "view-html"},
			{"step": "set-data", "paths":["label", "bannerUrl", "headerHtml", "footerHtml", "customCss"]},
			{"step": "save"},
			{"step": "forward-to", "url":"/admin/appearance"}
		]}
	}
}
