{
	"label": "Product",
	"description": "Sell products online",
	"icon": "fa-regular fa-shopping-cart",
	"containedBy": ["top", "folder"],
	"schema": {
		"type": "object",
		"properties": {
			"label": {"type": "string", "default": "New Product"},
			"data": {"type": "any", "comment":"This is 'any' because the data is validated/controlled by the schema in the stripe-product action."}
		}
	},
	"states": {
		"new": {},
		"ready": {},
		"sold-out": {}
	},
	"roles": {
		"owner": {
			"label": "Domain Owner",
			"decription": "Full control"
		}, 
		"anonymous": {
			"label": "Anonymous / Unauthenticated User",
			"description": "This is useful because Stripe confirmations come back without cookies."
		}
	},
	"actions": {
		"init": {
			"steps":[
				{"step": "set-data", "values": {"label": "New Product"}}
			]
		},
		"view": {
			"step": "view-html",
			"stateRoles": {
				"new": ["owner"], 
				"ready":["anonymous"],
				"sold-out":["anonymous"]
			}
		},
		"checkout": {
			"roles": ["anonymous"],
			"states": ["ready"],
			"step": "stripe-checkout"
		},
		"success": {
			"roles":["anonymous"],
			"states": ["ready", "sold-out"],
			"steps": [
				{"step": "stripe-complete"},
				{"step":"view-html"}
			]},
		"edit":{
			"roles": ["owner"],
			"steps":[
				{"step": "set-data", "paths": ["label"]},
				{"step": "edit-content", "file":"edit"},
				{"step": "save", "comment":"Content edited by {{.Author}}"}
			]
		},
		"attachments":{
			"roles": ["owner"],
			"steps":[
				{"step": "as-modal", "steps":[
					{"step": "view-html"}
				]}
			]
		},
		"attachments-list":{
			"roles": ["owner"],
			"steps": [
				{"step":"view-html"},
				{"step": "upload-attachments"}
			]
		},
		"attachments-sort":{
			"roles": ["owner"],
			"steps": [
				{"step":"sort-attachments", "message":"Updated sort order"}
			]
		},
		"attachments-delete":{
			"roles": ["owner"],
			"steps": [
				{"step":"view-html"},
				{"step": "delete-attachments"}
			]
		},
		"product": {
			"roles": ["owner"],
			"steps": [
				{"step": "as-modal", "steps": [
					{"step": "stripe-product"},
					{"step": "save", "message": "Stripe Checkout settings updated by {{.Author}}"}
				]}
			]
		},
		"delete": {
			"roles": ["owner"],
			"steps": [
				{"step": "delete", "comment": "Deleted by {{.Author}}"},
				{"step": "forward-to", "url":"/{{.ParentID}}"}
			]
		}
	}
}
